<h2 class="title is-3">Regístrate</h2>
<hr>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :Correo_electrónico, class: "label" %>
      <div class="control">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
      </div>
  </div>

  <div class="field">
   <%= f.label :Contraseña, class: "label" %>
   <div class="control">
      <%= f.password_field :password, autocomplete: "off", class: "input" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> Carácteres mínimo)</em>
      <% end %>
    </div>
  </div>

  <div class="field">
    <%= f.label :Confirma_Contraseña, class: "label" %>
    <div class="control">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "input" %>
    </div>
  </div>

  <div class="has-text-right">
    <%= f.submit "Registrarme", class: "button is-success is-fullwidth" %>
  </div>
<% end %>

<div class="has-text-centered big-margin-top">
  <%= render "devise/shared/links" %>
</div>